<%= render "users/nav" %>

<h1 class="title is-4 has-text-centered">Feed</h1>
<div class="columns">
  <div class="column is-one-quarter"></div>
  <div class="column is-half">
    <% @posts.take(10).each do |post| %>
      <div class="card mb-4">
        <div class="card-content">
          <h3 class="title is-5"><%= link_to post.user.name, user_path(post.user_id) %></h3>
          <h4 class="subtitle is-6 is-italic"><%= post.fmt_date %></h4>
          <p class="content">
          <%= post.body %>
          </p>
        </div>
        <div class="card-footer">
          <%= link_to 'Show', post, class: "card-footer-item" %>
          <% if user_signed_in? && current_user.id.eql?(post.user_id) %>
            <%= link_to 'Edit', edit_post_path(post), class: "card-footer-item" %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-footer-item" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
